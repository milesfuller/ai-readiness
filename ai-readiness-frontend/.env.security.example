# Security Environment Variables
# Copy this file to .env.local and update the values for your environment

# CSRF Protection Secret
# Generate a strong random string (minimum 32 characters)
# You can use: openssl rand -hex 32
CSRF_SECRET=your-very-long-and-random-csrf-secret-string-here-minimum-32-chars

# Security Monitoring (Optional)
# Webhook URL for security alerts
SECURITY_WEBHOOK_URL=https://your-webhook-service.com/security-alerts

# External logging service endpoint
SECURITY_LOGGING_ENDPOINT=https://your-logging-service.com/api/logs

# Security logging authentication token
SECURITY_LOGGING_TOKEN=your-logging-service-token

# Application URL (Required for CORS and CSP in production)
NEXT_PUBLIC_APP_URL=https://your-app-domain.com

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# LLM API Keys (Secure these carefully)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Additional Security Settings

# Rate Limiting Redis URL (Optional - for distributed rate limiting)
REDIS_URL=redis://your-redis-instance:6379

# Session Secret for additional security
SESSION_SECRET=your-session-secret-minimum-32-chars

# Database Encryption Key (if using encrypted fields)
DATABASE_ENCRYPTION_KEY=your-database-encryption-key

# File Upload Security
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,text/csv,application/pdf

# Security Headers Configuration
ENABLE_HSTS=true
ENABLE_CSP=true
CSP_REPORT_ONLY=false

# IP Blocking Configuration
ENABLE_IP_BLOCKING=true
MAX_FAILED_ATTEMPTS=10
BLOCK_DURATION_MINUTES=60

# Security Monitoring
ENABLE_SECURITY_MONITORING=true
ALERT_EMAIL=security@your-domain.com

# Development vs Production
NODE_ENV=production