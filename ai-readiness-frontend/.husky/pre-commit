#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run component validation
echo "⚙️ Validating React component boundaries..."
node .claude/hooks/validate-components.js

if [ $? -ne 0 ]; then
  echo "❌ Component validation failed. Commit blocked."
  echo "💡 Tip: Use 'git commit --no-verify' to bypass validation in emergencies"
  exit 1
fi

# Run existing security checks
echo "🔒 Running security checks..."
npm run test:security

if [ $? -ne 0 ]; then
  echo "❌ Security checks failed. Commit blocked."
  exit 1
fi

# Run linting
echo "✨ Running ESLint..."
npm run lint

if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Commit blocked."
  exit 1
fi

# Run type checking
echo "📝 Running TypeScript checks..."
npm run type-check

if [ $? -ne 0 ]; then
  echo "❌ Type checking failed. Commit blocked."
  exit 1
fi

echo "✅ All pre-commit checks passed!"