{
  "extends": [
    "next/core-web-vitals"
  ],
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2022": true,
    "jest": true
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "coverage/",
    "test-results/",
    "playwright-report/",
    "e2e/**/*"
  ]
}